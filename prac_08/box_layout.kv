BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    Button:
        text: "Clear"
        size_hint_y: None
        height: 150
        on_press: app.handle_clear()

    TextInput:
        id: input_name
        text: ""
        multiline: False
        size_hint_y: None
        height: 150

    Button:
        text: "Greet"
        size_hint_y: None
        height: 150
        on_press: app.handle_greet()

    Label:
        id: output_label
        text: ""
        font_size: 24
        color: 1, 1, 0, 1
        size_hint_y: None
        height: 150

