BoxLayout:
    orientation: 'vertical'

    # Top section: Input, Button, and Output label arranged horizontally
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False
            size_hint_x: 0.3

        Button:
            text: 'Square'
            size_hint_x: 0.4
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: ''
            font_size: 48
            color: (1, 0.5, 0.5, 1)  # Pink color for output label
            size_hint_x: 0.3

    # Bottom section: Instruction label
    Label:
        text: 'Enter a number and press "Square"'
        font_size: 18
        size_hint_y: 0.2
        halign: 'center'
        valign: 'middle'
        text_size: self.size
